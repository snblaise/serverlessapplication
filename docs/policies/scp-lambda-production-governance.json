{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyLambdaUpdateWithoutCodeSigning",
      "Effect": "Deny",
      "Action": [
        "lambda:UpdateFunctionCode",
        "lambda:CreateFunction"
      ],
      "Resource": "*",
      "Condition": {
        "Null": {
          "lambda:CodeSigningConfigArn": "true"
        }
      }
    },
    {
      "Sid": "RestrictLambdaToApprovedRegions",
      "Effect": "Deny",
      "Action": "lambda:*",
      "Resource": "*",
      "Condition": {
        "StringNotEquals": {
          "aws:RequestedRegion": [
            "us-east-1",
            "us-west-2",
            "eu-west-1"
          ]
        }
      }
    },
    {
      "Sid": "RequireMandatoryLambdaTags",
      "Effect": "Deny",
      "Action": [
        "lambda:CreateFunction"
      ],
      "Resource": "*",
      "Condition": {
        "ForAnyValue:StringNotLike": {
          "aws:RequestTag/Environment": [
            "dev",
            "staging",
            "prod"
          ]
        }
      }
    }    },
   
 {
      "Sid": "RequireEncryptionConfiguration",
      "Effect": "Deny",
      "Action": [
        "lambda:CreateFunction",
        "lambda:UpdateFunctionConfiguration"
      ],
      "Resource": "*",
      "Condition": {
        "Null": {
          "aws:RequestTag/Encryption": "true"
        }
      }
    },
    {
      "Sid": "RequireTracingConfiguration",
      "Effect": "Deny",
      "Action": [
        "lambda:CreateFunction",
        "lambda:UpdateFunctionConfiguration"
      ],
      "Resource": "*",
      "Condition": {
        "Null": {
          "aws:RequestTag/TracingConfig": "true"
        }
      }
    },
    {
      "Sid": "DenyPublicAPIGatewayWithoutWAF",
      "Effect": "Deny",
      "Action": [
        "apigateway:CreateStage",
        "apigateway:UpdateStage"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "apigateway:Request/EndpointType": "EDGE"
        },
        "Null": {
          "apigateway:Request/WebAclArn": "true"
        }
      }
    },
    {
      "Sid": "DenyAPIGatewayDeploymentWithoutWAFValidation",
      "Effect": "Deny",
      "Action": "apigateway:CreateDeployment",
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "apigateway:Request/EndpointType": "EDGE"
        }
      }
    }
  ]
}