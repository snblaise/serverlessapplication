{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyLambdaUpdateWithoutCodeSigning",
      "Effect": "Deny",
      "Action": [
        "lambda:UpdateFunctionCode",
        "lambda:CreateFunction"
      ],
      "Resource": "*",
      "Condition": {
        "Null": {
          "lambda:CodeSigningConfigArn": "true"
        }
      }
    },
    {
      "Sid": "DenyLambdaUpdateFunctionConfiguration",
      "Effect": "Deny",
      "Action": "lambda:UpdateFunctionConfiguration",
      "Resource": "*",
      "Condition": {
        "Bool": {
          "lambda:CodeSigningConfigArn": "false"
        }
      }
    }
  ]
}