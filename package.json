{
  "name": "serverless-lambda-production-ready",
  "version": "1.0.0",
  "description": "Production-ready serverless Lambda function with comprehensive CI/CD pipeline",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --coverage --testResultsProcessor=jest-junit",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "build": "npm ci --only=production",
    "package": "zip -r lambda-function.zip src/ node_modules/",
    "local:invoke": "sam local invoke -e events/test-event.json",
    "security:audit": "npm audit --audit-level=high",
    "validate": "node scripts/validate-package.js"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^1.17.0",
    "@aws-lambda-powertools/metrics": "^1.17.0",
    "@aws-lambda-powertools/tracer": "^1.17.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "aws-sdk-mock": "^5.8.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "aws",
    "lambda",
    "serverless",
    "production-ready",
    "ci-cd",
    "terraform"
  ],
  "author": "Your Name",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}